---
import SectionTitle from "@/components/Shared/SectionTitle.astro";
import { Button } from "@/components/ui/button";
import Container from "@/layouts/Container.astro";
import { Image } from "astro:assets";
interface Props {
  fields: any;
}
const { fields } = Astro.props;
---

<section class="bg-gray-200 py-10 lg:py-[70px] w-full">
  <Container big>
    <SectionTitle title={fields?.title || ""} />
    <div class="grid grid-cols-1 md:grid-cols-2 md:grid-rows-2 gap-4 mx-auto">
      <div
        class="relative rounded-2xl overflow-hidden bg-denim-700 md:row-span-2 h-64 md:h-full group"
      >
        <Button asChild>
          <a
            href="/cars"
            class="text-white px-4 py-2 rounded-md bg-denim-300 absolute hover:bg-denim-300/80 top-1/2 right-1/2 group-hover:z-[100] translate-x-1/2"
            >В каталог</a
          ></Button
        >
        <div class="absolute inset-0 bg-cover bg-center">
          <Image
            src={fields?.steps?.[0].image}
            alt="выбор-авто"
            width={600}
            height={600}
            class="absolute w-full h-full transition duration-500 ease-in-out object-fit group-hover:scale-125"
          />
        </div>
        <div class="absolute inset-0 bg-black/50"></div>
        <div
          class="relative z-10 flex flex-col justify-between h-full p-6 text-white"
        >
          <div class="text-xl font-semibold">
            {fields?.steps?.[0].title || ""}
          </div>
          <div class="text-xs md:text-lg opacity-80 text-end">
            {fields?.steps?.[0].description || ""}
          </div>
        </div>
      </div>

      <div class="relative rounded-2xl overflow-hidden bg-denim-700 h-64 group">
        <Button asChild>
          <a
            href="#form"
            class="text-white px-4 py-2 rounded-md bg-denim-300 absolute hover:bg-denim-300/80 top-1/2 right-1/2 group-hover:z-[100] translate-x-1/2"
            >Оставить заявку</a
          ></Button
        >
        <div class="absolute inset-0">
          <Image
            src={fields?.steps?.[1].image}
            alt="оставить заявку"
            width={600}
            height={300}
            class="absolute w-full h-auto top-0 md:-top-1/2 transition duration-500 ease-in-out group-hover:scale-125"
          />
        </div>
        <div class="absolute inset-0 bg-black/50"></div>
        <div
          class="relative z-10 flex flex-col justify-between h-full p-6 text-white"
        >
          <div class="text-xl font-semibold">
            {fields?.steps?.[1].title || ""}
          </div>
          <div class="text-xs md:text-lg opacity-80 text-end">
            {fields?.steps?.[1].description || ""}
          </div>
        </div>
      </div>

      <div class="relative rounded-2xl overflow-hidden bg-denim-700 h-64 group">
        <Button asChild>
          <a
            href="#map"
            class="text-white px-4 py-2 rounded-md bg-denim-300 absolute hover:bg-denim-300/80 top-1/2 right-1/2 group-hover:z-[100] translate-x-1/2"
            >Наш офис</a
          ></Button
        >
        <div class="absolute inset-0">
          <Image
            src={fields?.steps?.[2].image}
            alt="подписать догоров"
            width={600}
            height={600}
            class="absolute w-full h-auto top-0 md:-top-1/2 transition duration-500 ease-in-out group-hover:scale-125"
          />
        </div>
        <div class="absolute inset-0 bg-black/50"></div>
        <div
          class="relative z-10 flex flex-col justify-between h-full p-6 text-white"
        >
          <div class="text-xl font-semibold">
            {fields?.steps?.[2].title || ""}
          </div>
          <div class="text-xs md:text-lg opacity-80 text-end">
            {fields?.steps?.[2].description || ""}
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
