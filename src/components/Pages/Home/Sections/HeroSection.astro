---
import { Image } from "astro:assets";
import { CallbackTrigger } from "@/components/Pages/Home/CallbackTrigger";

const { hero_block, image } = Astro.props;
const { title, points } = hero_block;

interface Ponits {
  text: string;
}

interface Props {
  hero_block: {
    title: string;
    points: Ponits[];
    image: string;
  };
  image: string;
}
---

<section
  class="h-[100vh] relative w-full overflow-hidden text-denim-100 flex flex-col justify-center mb-10 md:mb-[35px]"
>
  <div class="grid w-full h-full aspect-[16/8] relative">
    <div class="overflow-hidden">
      <Image
        src={hero_block.image || image}
        inferSize
        alt="hero"
        fetchpriority="high"
        decoding="async"
        loading="lazy"
        class="w-screen h-screen object-cover !max-h-[unset] !max-w-[unset]"
      />
    </div>
    <div
      class="absolute z-8 h-full w-1/2 bg-gradient-to-r from-gray-800 to-transparent"
    />
        <div
      class="absolute z-8 w-full h-1/2 bg-gradient-to-b from-gray-800 to-transparent"
    />
  </div>
  <div class="absolute z-10 w-[90vw] left-1/2 -translate-x-1/2 mb-5">
    <h1 class="text-2xl md:text-3xl lg:text-5xl font-bold mb-6">
      {title}
    </h1>
    <ul class="list-disc pl-4 mb-8 text-sm lg:text-xl">
      {points.map((i) => <li>{i.text}</li>)}
    </ul>
    <CallbackTrigger client:load />
  </div>
</section>
