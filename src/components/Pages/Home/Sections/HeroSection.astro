---
import Container from "@/layouts/Container.astro";
import { ContactForm } from "../ContancForm";
import { Button } from "@/components/ui/button";
import { Image } from "astro:assets";

const { hero_block, image } = Astro.props;
const { title, points } = hero_block;

interface Ponits {
  text: string;
}

interface Props {
  hero_block: {
    title: string;
    points: Ponits[];
  };
  image: string;
}
---

<section
  class="h-[85.5vh] py-2 px-2 rounded-b-xl relative w-full overflow-hidden text-denim-100 flex flex-col justify-center"
>
  <div
    class="grid w-full h-full aspect-[16/8] relative"
  >
    <div
      class="rounded-xl overflow-hidden"
    >
    <Image src={image} width={1200} height={800} alt="hero" fetchpriority="high" loading="lazy" class="w-full object-cover"/>
    </div>
    <div
      class="absolute rounded-xl z-8 h-full w-1/2 bg-gradient-to-r from-gray-800 to-transparent"
    />
  </div>
  <div class="absolute z-10 w-[90vw] left-1/2 -translate-x-1/2 mb-5">
    <h1 class="text-2xl md:text-3xl lg:text-5xl font-bold mb-6">
      {title}
    </h1>
    <ul class="list-disc pl-4 mb-8 text-sm lg:text-xl">
      {points.map((i) => <li>{i.text}</li>)}
    </ul>
    <Button
      className="w-[300px] text-center text-lg bg-denim-300 hover:bg-denim-300/80 hidden md:block"
      size="lg"
    >
      <a href="/cars">Посмотреть автопарк</a>
    </Button>
        <Button
      className="w-[300px] text-center text-lg bg-denim-300 hover:bg-denim-300/80 md:hidden block"
      size="md"
    >
      <a href="/cars">Посмотреть автопарк</a>
    </Button>
  </div>
</section>
