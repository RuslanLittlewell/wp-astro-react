---
import SectionTitle from "@/components/Shared/SectionTitle.astro";
import Container from "@/layouts/Container.astro";
import { Image } from "astro:assets";
import { Play } from "lucide-astro";

const { fields } = Astro.props;
const { title, image, services_link } = fields;
---

<section class="py-10 lg:py-[70px] w-full bg-gray-200">
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <SectionTitle {title} class="!text-left" />
        {
          services_link.map((i: any) => {
            return (
              <div class="border-b border-gray-600 group">
                <a
                  href={i.link.post_name}
                  class="group-hover:pl-5 transition-all duration-300 text-base lg:text-2xl py-2 lg:py-8 flex justify-between items-center"
                >
                  {i.link.post_title}

                  <Play class="text-denim-300 size-8 group-hover:fill-denim-300 transition-fill duration-300 " />
                </a>
              </div>
            );
          })
        }
      </div>
      <div>
        <Image
          src={image}
          alt="Услуги"
          width={500}
          height={700}
          class="rounded-2xl ml-auto w-full h-[750px] object-cover shadow-md"
        />
      </div>
    </div>
  </Container>
</section>
