---
import SectionTitle from "@/components/Shared/SectionTitle.astro";
import Container from "@/layouts/Container.astro";
import { Image } from "astro:assets";
import { Play } from "lucide-astro";

const { fields } = Astro.props;
const { title, image, services_link } = fields;
---

<section class="py-10 lg:py-[75px] w-full">
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="flex justify-between flex-col">
        <SectionTitle {title} class="!text-left mt-0" />
        <div>
        {
          services_link.map((i: any) => {
            return (
              <div class="border-b border-gray-600 group">
                <a
                  href={i.link.post_name}
                  class="group-hover:pl-5 transition-all duration-300 text-base lg:text-xl py-2 lg:py-6 flex justify-between items-center"
                >
                  {i.link.post_title}

                  <Play class="text-denim-300 size-8 group-hover:fill-denim-300 transition-fill duration-300 " />
                </a>
              </div>
            );
          })
        }
        </div>
      </div>
      <div>
        <img
          src={image}
          alt="Услуги"
          class="rounded-2xl w-full h-auto object-fit shadow-md"
        />
      </div>
    </div>
  </Container>
</section>
