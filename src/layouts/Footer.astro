---
import { Image } from "astro:assets";
import Container from "./Container.astro";
import Payments from "@/assets/payments.webp";
import Logo from "@assets/icons/Car1Logo.svg";
import { FooterMenu } from "@/components/Shared/FooterMenu";
import { Phone, MapPin, ClockAlert } from "lucide-astro";
import {SocialLinks} from "@/components/Shared/SocialLinks";
const { links, data } = Astro.props;
---

<footer class="w-full bg-gray-600 text-white py-5" id="footer">
  <Container class="flex flex-col">
    <div class="grid grid-cols-2 md:grid-cols-[2fr_100px_1fr_1fr] gap-5 mb-5 mt-5">
      <a href="/" class="hidden md:block"><Logo class="md:h-[80px] md:w-[150px] mb-3" /></a>
      <div class="">
        <h4 class="text-base md:text-lg font-semibold mb-4">Разделы</h4>
        <div class="flex flex-col space-y-1">
          <FooterMenu {links} client:load />
        </div>
      </div>
      <div>
        <h4 class="text-base md:text-lg font-semibold mb-4">Контакты</h4>
        <p class="flex gap-2 text-xs md:text-sm mb-2"><Phone size="16"/> <a href={`tel:${data.phone}`}
          >{data.phone}</a
        ></p>
        <p class="flex gap-2 text-xs md:text-sm mb-2"><MapPin size="16" />
        {data.address}
        </p>
        <p class="flex gap-2 text-xs md:text-sm mb-2"><ClockAlert size="16" />
        {data.work_time}</p>
      </div>
      <!-- <div>
        <h4 class="text-base md:text-lg font-semibold mb-4 ">Нужна консультация?</h4>
        <p>
          <a href={data.wa} class="hover:text-denim-300">Напишите нам в WhatsApp</a>
        </p>
         <p>
          <a href={data.viber} class="hover:text-denim-300">Напишите нам в Viber</a>
        </p>
         <p>
          <a href={data.telegram} class="hover:text-denim-300">Напишите нам в Telegram</a>
        </p>
      </div> -->
      <div>
        <h4 class="text-base md:text-lg font-semibold mb-4">Оставайтесь на связи</h4>
        <SocialLinks {data} showInstagram/>
      </div>
    </div>
    <div class="flex flex-col md:flex-row justify-between  items-center md:items-end text-xs md:text-sm">
      <div>©{new Date().getFullYear()} car1.by Все права защищены.</div>
      <Image
        src={Payments}
        width={1280}
        height={66}
        alt="спобобы оплаты"
        class="w-full !md:w-1/2"
      />
      <div>ИП Гутик</div>
    </div>
  </Container>
</footer>
