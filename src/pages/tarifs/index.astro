---
import { ConditionsTabs } from "@/components/Pages/Conditions/ConditionsTabs";
import { TarifCard } from "@/components/Pages/Tarifs/TarifCard";
import MainTitle from "@/components/Shared/MainTitle.astro";
import {
  Breadcrumb,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbPage,
  BreadcrumbSeparator,
} from "@/components/ui/breadcrumb";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Container from "@/layouts/Container.astro";
import { wpFetch } from "@/lib/wp";

interface Car {
  acf: any;
  title: {
    rendered: string;
  };
  slug: string;
}

const cars: Car[] = await wpFetch("/wp/v2/cars");
const {acf: pageData} = await wpFetch('/acf/v3/pages/193');
const { seo } = pageData
---

<BaseLayout className="scrolled" title={seo.seo_title} image={seo.image} description={seo.short_description}>
  <Container class="my-24">
    <Breadcrumb>
      <BreadcrumbList>
        <BreadcrumbItem>
          <BreadcrumbLink href="/">Главная</BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator />
        <BreadcrumbItem>
          <BreadcrumbPage>Условия</BreadcrumbPage>
        </BreadcrumbItem>
      </BreadcrumbList>
    </Breadcrumb>
    <MainTitle title="Тарифы" />

    <div class="flex flex-col gap-4">
    {cars.map((car) => <TarifCard car={car} client:load />)}
    </div>
  </Container>
</BaseLayout>
