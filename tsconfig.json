{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "types": ["astro/client"],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@splidejs/react-splide": [
          "./node_modules/@splidejs/react-splide/dist/types/index.d.ts"
        ]
    }
  },
  "exclude": ["node_modules", "dist"]
}
